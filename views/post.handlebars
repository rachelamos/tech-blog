<div class="row">
  <div class="col justify-content-center">
    <div class="card">
      <div class="card-header">
        <a href="/post/{{post.id}}">{{post.title}}</a>

        <div class="text-align: right">Written by {{user.name}} on {{format_date post.date_created}}</div>
      </div>
      <div class="card-text">{{post.description}}</div>
    </div>
  </div>
</div>

{{#each comments as |comment|}}
 <div class="container-fluid comment">
    <div class="row">
      <div class="col-1"></div>
      <div class="col">
        <div class="card">
          <div class="card-header">
            <div style="text-align: right">Posted by {{user_id}} on {{format_date date_created}}</div>
          </div>
          <div class="card-body">
            <p class="card-text">{{description}}</p>
          </div>
        </div>
      </div>
      <div class="col-1"></div>
    </div>
  </div>
  {{/each}}


<div class="card-body">
  <form class="form comment-form">
  <h6 class="card-title">Comment:</h6>
    <div class="form-group">
      <label for="comment">
        <input class="form-control" type="text" id="comment-input" />
      </label>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" post-id="{{post.id}}" onclick="commentFormHandler(event)" type="submit">Submit</button>
    </div>
    </form>
</div>

<script src="/js/comment.js"></script>