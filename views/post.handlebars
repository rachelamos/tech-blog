<div class="row">
  <div class="col justify-content-center">
    <div class="card">
      <div class="card-header">
        <a href="/post/{{post.id}}">{{post.title}}</a>
        <div class="text-align: right">Written by {{user.name}} on {{format_date post.date_created}}</div>
      </div>
      <div class="card-text">{{post.description}}</div>
    </div>
  </div>
</div>


 <div class="container-fluid comment">
{{#each comments as |comment|}}
    <div class="row">
      <div class="col-1"></div>
      <div class="col">
        <div class="card">
          <div class="card-header">
            <div style="text-align: right">Posted by {{user.name}} on {{format_date date_created}}</div>
          </div>
          <div class="card-body">
            <p class="card-text">{{description}}</p>
          </div>
        </div>
      </div>
      <div class="col-1"></div>
    </div>
 {{/each}}
  </div>
  </br>
 
</br>
<div class="card-header">
  <h3>Update the Post</h3>
  <form class="form update-form">
    <div class="form-group">
      <label for="update-title">Update Post Title</label>
      <input class="form-input" type="text" id="title-input" />
    </div>
    <div class="form-group">
      <label for="update-description">Update Post Description</label>
      <input class="form-input" type="text" id="description-input" />
    </div>

    <div class="form-group">
      <button class="btn btn-primary btn-update" post-id="{{post.id}}" onclick="updateHandler(event)" update-button="yes" type="submit">Update</button>
    </div>
  </form>
</div>
<div class="card-body">
  <form class="form comment-form">
  <h6 class="card-title">Comment:</h6>
    <div class="form-group">
      <label for="comment">
        <input class="form-control" type="text" id="comment-input" />
      </label>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" post-id="{{post.id}}" onclick="commentFormHandler(event)" submit-button="yes" type="submit">Submit</button>
    </div>
    </br>
    <div class="btn btn-primary btn-delete" post-id="{{post.id}}" delete-button="yes" onclick="deletePostHandler(event)" type="delete">Delete Post</div>
    </form>
</div>

<script src="/js/comment.js"></script>
<script src="/js/updatePost.js"></script>
<script src="/js/deletePost.js"></script>