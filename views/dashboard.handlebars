<!-- Loop over each object in the projects array -->
{{#if posts.length}}
<div class="container-fluid">
{{#each posts as |post| }}
<div class="row">
  <div class="col justify-content-center">
    <div class="card">
      <div class="card-header">
        <a href="/post/{{post.id}}">{{post.title}}</a>
      </div>
      <div style="text-align: right">Written by {{user.name}} on {{format_date post.date_created}}</div>
      {{!-- <div class="btn btn-primary btn-delete" post-id={{post.id}} delete-button="yes" onclick="deletePostHandler(event)" type="delete">Delete Post</div> --}}
    </div>
  </div>
</div>
{{/each}}
</div>
{{/if}}
{{#if logged_in}}
<div class="row">
  <div class="col justify-content-center">
    <h6>
    <a href="/newpost" class="btn btn-primary btn-newpost" type="submit">Add a Post</a>
    </h6>
  </div>
</div>
{{/if}}

