<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col justify-content-center">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
      <span class="user-info">Written by: {{user.name}} on {{format_date post.date_created}}</span>
    </p>
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}

{{#if logged_in}}
<div class="row">
  <div class="col justify-content-center">
    <h6>
    <a href="/newpost" class="btn btn-primary btn-newpost" type="submit">Add a Post</a>
    </h6>
  </div>
</div>
{{/if}}